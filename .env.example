# Database
DATABASE_URL=postgresql://username:password@localhost:5432/uper_link?schema=public

# NextAuth.js
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# SMTP Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-smtp-password-or-api-key-here

# Google Safe Browsing
GOOGLE_SAFE_BROWSING_API_KEY=your-google-safe-browsing-api-key-here

# Cloudflare Turnstile
CLOUDFLARE_TURNSTILE_SECRET=your-turnstile-secret-here
NEXT_PUBLIC_CLOUDFLARE_TURNSTILE_SITE_KEY=your-turnstile-site-key-here

# Admin Passcode
ADMIN_PASSCODE=your-admin-passcode-here